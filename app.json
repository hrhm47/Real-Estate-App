{
  "expo": {
    "name": "Real-Estate-App", // app display name Shown on Home Screen
    "slug": "Real-Estate-App", // unique identifier for the app, by Expo
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "realestateapp", // use for deep linking
    "userInterfaceStyle": "automatic", // automatic, light, dark theme colors based on system
    "newArchEnabled": true, // new architecture for react native as it removes the previous one (bridge one) 
    // now we have facbric, JSI, turbo modules ( for native modules ), and native modules without bridge etc.
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
